<div class="flex items-center justify-center h-screen left-1/2 right-1/2 text-yellow-400">
  <div class="flex flex-col items-center mt-40">
    <div class="mb-4">
      <img src="<%= @visible_card['image'] %>" alt="<%= @visible_card['value'] %> of <%= @visible_card['suit'] %>">
    </div>

    <div>
      <h3 class="text-center">
      <% if current_user.equipped.any? { |equipped_skill| equipped_skill.name == "V.I.P" } %>
        <%= current_user.name %>様、いつもありがとうございます。
      <% else %>
        <%= @result %>
      <% end %>
      </h3>
      <div class="flex mt-4">
        <% @hidden_cards.each_with_index do |card, index| %>
          <div class="card  mr-4 ml-4">
            <% if index == @selected_index %>
              <img src="<%= card['image'] %>" alt="<%= card['value'] %> of <%= card['suit'] %>">
              <p class="text-center">あなたのカードは <%= card['value'] %>です。</p>
            <% else %>
              <img src="<%= card['image'] %>" alt="<%= card['value'] %> of <%= card['suit'] %>">
            <% end %>
          </div>
        <% end %>
      </div>
      <div class='flex flex-row-reverse mt-4 mb-8 text-xl'>
        <%= link_to 'もう一回', trump_index_path %>
      </div>
    </div>
  </div>
</div>

